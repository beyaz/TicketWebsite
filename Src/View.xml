<ui.page.grid>
  <ui.container>
    <ui.text.menu.navbar FontSize='18'>
      <left.menu>
        <item>Project Name</item>
      </left.menu>
      <right.menu>
        <item>Home</item>
        <item>About</item>
        <item>Contact</item>
      </right.menu>
    </ui.text.menu.navbar>
    <ui.divider MarginBottom='10' /> 
    <div>
      <Carousel DataSource='img/carousel_1.jpg,img/carousel_2.jpg,img/carousel_3.jpg' />
    </div>
    <ui.divider MarginBottom='10' />
    
    <div  x.Name = 'mainContentContainer' >
      
      <ui.cards AddClass='stackable' >
        <card on.click = 'OnSafariClick' >
          <ui.image Height='220' Src='img/carousel_1.jpg' />
          <content Align='Center'>
            <Header Align='Center'>Motor Safari</Header>
            <description>Macera sizi bekliyor...</description>
            <ui.basic.button Text='İncele' MarginTop='11' AddClass='yellow' />
          </content>
        </card>

        <card>
          <ui.image Height='220' Src='img/carousel_2.jpg' />
          <content Align='Center'>
            <Header Align='Center'>Paraşüt atlama</Header>
            <description>Gökyüzünde kuşlar gibi uçmak mı istiyorsunuz ?</description>
            <ui.basic.button Text='İncele' MarginTop='11' AddClass='yellow' />
          </content>
        </card>

        <card>
          <ui.image Height='220' Src='img/carousel_3.jpg' />
          <content Align='Center'>
            <Header Align='Center'>Rafting</Header>
            <description>Dalgalarla çarpışmak artık çok eğlenceli</description>
            <ui.basic.button Text='İncele' MarginTop='11' AddClass='yellow' />
          </content>
        </card>

      </ui.cards>
    </div>
  </ui.container>

  <row MarginTop = '10'>
    <ui.divider  WidthPercent = '100' />
  </row>
  
  <row MarginTop = '3'>
    <div class='center aligned column'>
      <TextBlock Align='Center' FontSize='15' >  © Company 2017 </TextBlock>
    </div>
  </row>
  

</ui.page.grid>